{
    "typescript.tsserver.maxTsServerMemory": 4096,
    "typescript.tsserver.nodePath": "C:/Program Files/nodejs/node.exe",
    "json.schemas": [
        {
            "fileMatch": [
                "/recipe_schemas/*.json"
            ],
            "url": "./.vscode/recipe.json"
        }
    ],
    "files.exclude": {
        ".mixin.out/": true,
        ".probe/": true,
        "cache/": true,
        "config/": true,
        "coremods/": true,
        "crash-reports": true,
        "data/": true,
        "debug/": true,
        "defaultconfigs/": true,
        "Distant_Horizons_server_data/": true,
        "downloads/": true,
        "dynamic-data-pack-cache/": true,
        "dynamic-resource-pack-cache/": true,
        "ESM/": true,
        "ftbbackups3/": true,
        "kiwipacks/": true,
        "local/": true,
        "logs/": true,
        "mods/": true,
        "node_modules/": true,
        "resourcepacks/": true,
        "saves/": true,
        "screenshots/": true,
        "server-resource-packs/": true,
        "shaderpacks/": true,
        "spark-modernfix/": true,
        "texturepacks/": true,
        "xaero/": true,
        "armourers_workshop/": true,
        "immersive_paintings_cache/": true,
        "moddata/": true,
        "schematics/": true,
        "XaeroWaypoints_BACKUP*/": true,
        "command_history.txt": true,
        "icon.png": true,
        "options.txt": true,
        "patchouli_data.json": true,
        "servers.dat": true,
        "servers.dat_old": true,
        "usercache.json": true,
        "usernamecache.json": true, // probejs lock
    },
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.disableAutomaticTypeAcquisition": true,
    "typescript.validate.enable": true,
    "typescript.surveys.enabled": false
}