{
    "include": [
        "./**/*.js",
        "./**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "target": "ES2015",
        "disableSizeLimit": true,
        "noEmit": true,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "rootDir": ".",
        "baseUrl": "../../.probe/",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,

        "strictNullChecks": true,

        "lib": [
            "ES2015",
            "ES2016.Array.Include",
            "ES2017.Object"
        ],
        "typeRoots": [
            "../../.probe/packages",
            "../../.probe/server"
        ]
    }
}